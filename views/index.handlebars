<header style="text-align: center;">
  <h1  style="display: inline-block;">Burger 4 U</h1>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Burger List</h2>

       <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{>burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
       </ul>
    </div>
    <div class="col-md-6">
      <h2>Devoured Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
           {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="row">
        <div class="col">
          <h2>Add a Burger</h2>
            <form class="create-form">

              <div class="form-group">
                <label for="newBurger">Burger and toppings:</label>
                <input type="text" id="newBurger" name="burger_name">
              </div>

              <button class="btn btn-primary" type="submit">Add Burger</button>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>
